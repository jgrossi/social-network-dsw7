<h1>Login</h1>

<p class="lead">Don't have an account? Don't worry! <%= link_to "Register now", new_registration_path(resource_name) %>!</p>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="control-group">
		<%= f.label :email, :class => 'control-label' %>
  	<div class="controls">
  		<%= f.email_field :email, :class => 'span5' %>
  	</div>
	</div>

  <div class="control-group">
		<%= f.label :password, :class => 'control-label' %>
		<div class="controls">
			<%= f.password_field :password %>
		</div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
			<%= f.label :remember_me, :class => 'checkbox' do |l| %>
				<%= f.check_box :remember_me %> Remember me on this computer
			<% end %>
		</div>
  <% end -%>

  <div class="form-actions">
		<%= f.submit "Sign in", :class => 'btn btn-primary', :style => 'margin-right: 10px;' %>
		<%= link_to "Forgot your password?", new_password_path(resource_name) %>
	</div>
<% end %>
